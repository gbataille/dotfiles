[alias]
	st = status
	co = checkout
	cob = switch -c
	sw = switch
	swc = switch -c
	commitamend = commit --amend --no-edit
	ca = commit --amend
	ce = commit --amend --no-edit
	p = push
	b = branch -v
	t = tag -a
	lg1 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
	lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
	lg = !"git lg1"
	d = diff -w
	dt = difftool
	dc = diff --cached -w
	branch-clean = "!sh clean_remote_branches.sh"
	g = grep -W
	clb = clean_local_branches
[core]
	excludesfile = ~/.gitignore_global
	hooksPath = /Users/gbataille/.git_hooks
[push]
	default = simple
[github]
	user = gbataille
[color]
	ui = true
[init]
	templatedir = ~/.git_templates
	defaultBranch = main
[pull]
	rebase = merges
[rerere]
	enabled = true
[diff]
	tool = nvimdiff
	indentHeuristic = true
	algorithm = patience
	colorMoved = zebra
[difftool]
	prompt = false
	tool = nvimdiff
	trustExitCode = true
[merge]
	ff = false
	tool = nvimdiff
[mergetool]
	tool = nvimdiff
	prompt = false
[difftool "nvimdiff"]
	path = nvim
[mergetool "nvimdiff"]
	path = nvim
	trustExitCode = true
[pager]
	log = /usr/local/share/git-core/contrib/diff-highlight/diff-highlight | less
	show = /usr/local/share/git-core/contrib/diff-highlight/diff-highlight | less
	diff = /usr/local/share/git-core/contrib/diff-highlight/diff-highlight | less
	branch = false
[interactive]
	diffFilter = /usr/local/share/git-core/contrib/diff-highlight/diff-highlight
[grep]
	lineNumber = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[user]
	name = Gr√©gory Bataille
	signingkey = 1D2DF15BF8DA7B8D
[commit]
	gpgsign = true
[url "git@github.com:taurusgroup"]
	insteadOf = https://github.com/taurusgroup
[url "git@github.com:t-dx"]
	insteadOf = https://github.com/t-dx

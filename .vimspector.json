{
  "configurations": {
    "go": {
      "adapter": "delve",
      "filetypes": ["go"],
      "variables": {},
      "configuration": {
        "request": "launch",
        "program": "${fileDirname}",
        "mode": "debug"
      }
    },
    "go-single-test": {
      "adapter": "delve",
      "filetypes": ["go"],
      "variables": {},
      "configuration": {
        "request": "launch",
        "program": "${fileDirname}",
        "args": ["-test.run", "${regex}"],
        "buildFlags": "-tags=integration",
        "mode": "test",
        "showLog": true
      }
    },
    "go-test": {
      "adapter": "delve",
      "filetypes": ["go"],
      "variables": {},
      "configuration": {
        "request": "launch",
        "program": "${fileDirname}",
        "buildFlags": "-tags=integration",
        "mode": "test",
        "showLog": true
      }
    },
    "blocksd": {
      "adapter": "delve",
      "filetypes": ["go"],
      "variables": {},
      "configuration": {
        "request": "launch",
        "program": "${cwd}/cmd/tg-blocksd",
        "args": ["start", "--config", "./configs/local/tg-blocksd.yml"],
        "mode": "debug",
        "trace": "log"
      }
    }
  }
}
